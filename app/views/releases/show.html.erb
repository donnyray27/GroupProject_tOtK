<div>
<div>
<h1> <%=@release.title %> by <%= @release.artist %> </h1>
<img src="http://cps-static.rovicorp.com/3/JPG_500/MI0003/125/MI0003125784.jpg?partner=allrovi.com" height="400" width="400"/>
</div>

<h3> Description: </h3>

<div class="">
  <% @reviews.each do |review| %>
  <ul>
    <li>
      Review Rating: <%=review.rating%>
      <br />
      Review Author: <%= review.user.username %>
      <br />
      <div class="row large-12">
      Review Body: <%=review.body%>
      <br />
      <div id="app">
      </div>
    </div>
      <% @comments.each do |comment| %>
      <ul>
        <li>
           Comment: <%= comment.body %>
           <br />
           Written by: <%= comment.user.username %>
         </li>
         <br />
      </ul>
      <% end %>
      <%= link_to 'Add Comment', new_review_comment_path(review) %>
    </li>
  </ul>
  <% end %>
</div>


<p>
  <%= link_to 'Add Review', new_release_review_path(@release) %>
</p>
</div>
